<div class="cursor"></div>

<style lang="scss">
  $cursor-size: 16px;
  $cursor-rim-size: 50px;

  .cursor {
    position: fixed;
    width: $cursor-size;
    aspect-ratio: 1/1;
    translate: -50% -50%;
    border: 1px solid currentColor;
    border-radius: 50%;
    pointer-events: none;
    transition: opacity 250ms, width 500ms, height 500ms;
    background-color: var(--background-color);
    mix-blend-mode: difference;
    opacity: 0;

    &::after {
      content: "";
      position: absolute;
      height: $cursor-rim-size;
      aspect-ratio: 1/1;
      left: 50%;
      top: 50%;
      translate: -50% -50%;
      background-color: transparent;
      border: 1px solid #fff;
      border-radius: 50%;
    }

    @media screen and (max-width: 600px) {
      display: none;
    }
  }

  .cursor.grow {
    width: $cursor-rim-size;
    transition: width 500ms, height 500ms;
  }

  html:hover .cursor {
    opacity: 1;
  }
</style>

<script>
  import { cursor } from "../utils/cursor";

  cursor();
</script>
